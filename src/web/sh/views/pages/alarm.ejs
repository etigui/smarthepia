    $("#alarmTable tbody").on("click","#ackSumbit", function () {
        var nRow = $(this).parents('tr')[0];
        var oTable = $('#alarmTable').dataTable();
        var aData = oTable.fnGetData(nRow);
        var id =  aData._id;

        // Check if the alarm is exist
        if(id) {
            $.ajax({
                url: "/alarm/ack",
                type: "get",
                data: {
                    id: id,
                },
                dataType: "json",
                success: function (response) {

                    if (response.status === "success") {

                        socket.emit("alarmNotify", "")
                        $('#alarmTable').DataTable().ajax.reload();
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }else{
            toastr.error("Alarm id error", "error", {closeButton: true})
        }
    });

    // BEGIN Server time section /////////////////////////////////////////////////////////////
    // Local and servers time
    var timeLocal = new Date();
    var timeServer = new Date("<%= dateTime %>");

