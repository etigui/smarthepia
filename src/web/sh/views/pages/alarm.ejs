    $('#alarmTable').dataTable({
        order: [[2,'desc'], [3,'asc']],
        dom: 'lBfrtip',
        buttons: [
            'colvis','copy', 'csv', 'excel', 'pdf', 'print'
        ],
        lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
        autoWidth: false,
        destroy: true,
        searching: true,
        type: 'get',
        ajax: "/alarm/listall",
        columns: [
            {
                className:      'details-control',
                orderable:      false,
                data:           null,
                defaultContent: ''
            },
            { data: "name"},
            { data: "dtype"},
            { data: "atype"},
            { data: "aseverity"},
            { data: "count"},
            { data: "dlast"},
            { data: "amessage"},
            {},
            {data: "_id"}
        ],
        aoColumnDefs: [{
        targets: 3,
        sType: "typeSort",
        bSortable: true,
        data: null,
        className: "text-center align-middle",
        render: function (data, type, full, meta){

            var color = "danger";
            if(data === "3"){
                color =  "info";
                data = "Info";
            }else if(data === "2"){
                color =  "warning";
                data = "Warning";
            }else if(data === "1"){
                data = "Error";
                color =  "danger";
            }
            return '<div class="badge badge-'+color+'" style="line-height: 1.5; display: block;">'+data+'</div>';
        }
        }, {
            targets: 8,
            searching: false,
            orderable: false,
            data: null,
            className: "text-center align-middle last",
            render: function (data, type, full, meta) {
                return '<div class="btn-group">\n' +
                    '    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\n' +
                    '        Action\n' +
                    '    </button>\n' +
                    '    <div class="dropdown-menu" x-placement="bottom-start">\n' +
                    '        <button id="ackSumbit" class="dropdown-item ack" type="button" data-toggle="modal" data-target="#modalEditUser" >Ack</button>\n' +
                    '        <button id="postponeSubmit" class="dropdown-item" type="button">Postpone</button>\n' +
                    '        <button id="assignSubmit" class="dropdown-item" type="button">Assign</button>\n' +
                    '    </div>\n' +
                    '</div>';
            }
        }, {
            targets: 4,
            data: null,
            className: "text-center align-middle",
            render: function (data, type, full, meta) {

                var percent = 0;
                if (data === 3) {
                    percent = 100;
                } else if (data === 1) {
                    percent = 33;
                } else if (data === 2) {
                    percent = 66;
                } else {
                    data = "";
                }
                return '<div class="progress" style="margin-top: auto; margin-bottom:auto; ">\n' +
                    '<div class="progress-bar" role="progressbar" aria-valuemax="100" style="width:' + percent + '%" aria-describedby="example-caption-2">' + data + '</div>\n' +
                    ' </div>';
            }
        },
            {targets: 0, className: "text-center align-middle"},
            {targets: 2, className: "text-center align-middle"},
            {targets: 1, className: "text-center align-middle"},
            {targets: 5, className: "text-center align-middle"},
            {targets: 6,
                data: null,
                className: "text-center align-middle",
                render: function (data, type, full, meta) {
                    date = new Date(data);
                    return formatDate(date);
                }
            },
            {targets: 7, className: "text-center align-middle"},
            {
                "targets": 9,
                "visible": false,
                "searchable": false
            }]
    });

    function customSort(type){
        var sortedType = 0;
        if(type === '<div class="badge badge-danger" style="line-height: 1.5; display: block;">Error</div>'){
            sortedType = 0;
        }else if(type === '<div class="badge badge-warning" style="line-height: 1.5; display: block;">Warning</div>'){
            sortedType = 1;
        }else if(type === '<div class="badge badge-info" style="line-height: 1.5; display: block;">Info</div>'){
            sortedType = 2;
        }else{
            sortedType = 3;
        }
        return sortedType;
    }

    jQuery.fn.dataTableExt.oSort["typeSort-desc"] = function (x, y) {
        return customSort(x) < customSort(y);
    };
    jQuery.fn.dataTableExt.oSort["typeSort-asc"] = function (x, y) {
        return customSort(x) > customSort(y);
    }

    // Formatting function for row details
    function format (d) {
        var trs='';
        $.each($(d.detail),function(key,value){
            date = new Date(value);
            trs+='<tr><td style="border: none !important;">'+key+'</td><td style="border: none !important;">'+formatDate(date)+'</td></tr>';
        })
        // `d` is the original data object for the row
        return '<table class="table table-striped"  cellpadding="5" cellspacing="0" border="0" style="background-color: #FFFFFF; width: auto;  margin-bottom: 0px;">'+
            '<tbody>' + trs + '</tbody></table>';
    }

    // Add event listener for opening and closing details
    $('#alarmTable tbody').on('click', 'td.details-control', function () {
        var tr = $(this).closest('tr');
        var table = $('#alarmTable').DataTable();
        var row =  table.row( tr );

        if ( row.child.isShown() ) {
            // This row is already open - close it
            row.child.hide();
            tr.removeClass('shown');
        }
        else {
            // Open this row
            row.child( format(row.data()) ).show();
            tr.addClass('shown');
        }
    });

    // END Server time section /////////////////////////////////////////////////////////////

