<script>

    onLoad();

    function onLoad(){
        $('#cardGraph').hide();
        loadRooms();
        $('#deviceSel').attr('disabled', 'disabled');
    }

    // Set datetime picker
    $(".dtpicker").datetimepicker({
        format: 'mm-dd-yyyy hh:ii',
        autoclose: true,
        todayBtn: true
    });

    // Select room and load devices
    $('#roomSel').change(function(){
        loadDevices($("#roomSel").val());
        $('#deviceSel').removeAttr('disabled');
    });

    // Check parm and load graph
    $("#statSubmit").submit(function( event ) {
        event.preventDefault();

        // Get and check date from/to
        var dateFrom = new Date($("#dateFrom").val());
        var dateTo = new Date($("#dateTo").val());
        if (dateFrom > dateTo){
            toastr.error("Date from must be before date to", "error", {closeButton: true});
        }else{
            var room = $("#roomSel").val();
            var devices = $("#deviceSel").val();
            clear_graph();
            loadGraphActuator(dateFrom, dateTo, room, devices);
            $('#cardGraph').show();
        }
    });

    function loadDevices(id){
        $.ajax({
            url: "/actuator/devices",
            type: "get",
            dataType: "json",
            data: {id: id},
            success: function (response) {
                console.log(response);

                var selDevices = $('#deviceSel');
                selDevices.empty().append('<option value="" selected disabled hidden>Select device</option>');
                $.each(response.data, function (i, item) {
                    selDevices.append($('<option>', {
                        value: item.id,
                        text : item.name
                    }));
                });
            }
        });
    }

    function loadRooms(){
        $.ajax({
            url: "/actuator/room",
            type: "get",
            dataType: "json",
            success: function (response) {

                var selRoom = $('#roomSel');
                selRoom.empty().append('<option value="" selected disabled hidden>Select room</option>');
                $.each(response.data, function (i, item) {
                    selRoom.append($('<option>', {
                        value: item.id,
                        text : item.name
                    }));
                });
            }
        });
    }

    // BEGIN Server time section /////////////////////////////////////////////////////////////
    // Local and servers time
    var timeLocal = new Date();
    var timeServer = new Date("<%= dateTime %>");

    //C alculate the difference (returns milliseconds)
    var millDiff = timeLocal - timeServer;

    // Init the clock on loading of page
    window.onload = function () {
        //set the interval so clock ticks
        var timeClock = setInterval("timeTick()", 10);
    };
    // END Server time section /////////////////////////////////////////////////////////////

    <% if((typeof permission !== 'undefined') && permission > 0) {%>
    // BEGIN alarm section ////////////////////////////////////////////////////////////////

    function loadBadge(){
        $.ajax({
            url: "/alarm/badge",
            type: "get",
            dataType: "json",
            success: function (response) {
                var span = $('#alarmBadge');
                updateBadge(span, response.atype, response.count);
            }
        });
    }


    var socket = io.connect();
    socket.on('connect', function () {
        console.log('Socket connected');
    });

    socket.on('welcome',function(data){
        console.log("Receive welcome");
        loadBadge();
    });

    // Manager, admin receive notif when graph change
    socket.on('alarmNotify',function(data){
        console.log("Receive alarmNotify");
        loadBadge();
    });
    // END alarm section /////////////////////////////////////////////////////////////////
    <%}%>
</script>

