<script>

        onLoad();

        function onLoad(){
            //genDeviceTable();
        }

        $('#ruleTable').dataTable({
            dom: 'Bfrtip',
            buttons: [{
                extend: 'collection',
                text: 'Option',
                className: 'btn btn-primary',
                buttons: [
                    {
                        extend: 'pdf',
                        text: "Export as PDF",
                        exportOptions: {
                            columns: [0, 1, 2, 3]
                        }
                    },
                    {
                        extend: 'csv',
                        text: "Export as CSV",
                        exportOptions: {
                            columns: [ 0, 1, 2, 3]
                        }
                    },{
                        extend: 'excel',
                        text: "Export as Excel",
                        exportOptions: {
                            columns: [ 0, 1, 2, 3]

                        }
                    },{
                        extend: 'copy',
                        text: "Copy to clipboard",
                        exportOptions: {
                            columns: [ 0, 1, 2, 3]

                        }
                    }
                    ,'pageLength','colvis'
                ]}],
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            autoWidth: false,
            //destroy: true,
            searching: true,
            type: 'GET',
            ajax: "/rule/listall",
            columns: [
                { data: "name"},
                { data: "active"},
                { data: "dt"},
                { data: "nt"},
                { data: "temp"},
                {},
                {data: "_id"},
                {data: "humidity"},
                {data: "vdnr"},
                {data: "bdr"},
                {data: "bnr"}
            ], columnDefs: [{
                targets: 5,
                searching: false,
                orderable: false,
                data: null,
                className: "text-center align-middle last",
                render: function (data, type, full, meta){
                    return '<div class="btn-group">\n' +
                        '    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\n' +
                        '        Action\n' +
                        '    </button>\n' +
                        '    <div class="dropdown-menu" x-placement="bottom-start">\n' +
                        '        <button id="editRule" class="dropdown-item" type="button" data-toggle="modal" data-target="#ruleModal" >Edit</button>\n' +
                        '        <button id="deleteRule" class="dropdown-item" type="button">Delete</button>\n' +
                        '    </div>\n' +
                        '</div>';
                }
            },  {targets: 4, className: "text-center align-middle"},
                {targets: 3, className: "text-center align-middle"},
                {targets: 2, className: "text-center align-middle"},
                {targets: 1, className: "text-center align-middle",
                    render: function (data, type, full, meta){
                        if(data === 1){
                            return "On";
                        }else{
                            return "Off";
                        }
                    }
                },
                {targets: 0, className: "text-center align-middle"},
                {
                    "targets": 6,
                    "visible": false,
                    "searchable": false
                },{
                    "targets": 7,
                    "visible": false,
                    "searchable": false
                },{
                    "targets": 8,
                    "visible": false,
                    "searchable": false
                },{
                    "targets": 9,
                    "visible": false,
                    "searchable": false
                },{
                    "targets": 10,
                    "visible": false,
                    "searchable": false
                }]
        });

        // Edit rule
        $("#ruleTable tbody").on("click","#editRule", function () {
            var nRow = $(this).parents('tr')[0];
            var oTable = $('#ruleTable').dataTable();
            var aData = oTable.fnGetData(nRow);
            $('#dnRulesValveEdit').val(aData.vdnr);
            $('#dayRulesBlindEdit').val(aData.bdr);
            $('#nightRulesBlindEdit').val(aData.bnr);
            $("#idEdit").val(aData._id)
            $('#tempEdit').val(aData.temp);
            $('#humidityEdit').val(aData.humidity);
            $('#ruleNameEdit').val(aData.name);
            $('#nightTimeFromEdit').val(aData.nt);
            $('#dayTimeFromEdit').val(aData.dt);

            // Tricks to turn on off the switch
            if(aData.active){
                $('#activeEdit').prop('checked', true);
            }else{
                $('#activeEdit').prop('checked', false);
            }
        });

        // Sens ajax request to add, delete, edit rule
        function setRule(url, datas){
            $.ajax({
                url: url,
                type: "post",
                dataType: "json",
                data: datas,
                success: function (response) {
                    if (response.status === "success") {
                        $('#ruleTable').DataTable().ajax.reload();
                        $("#ruleSubmit").get(0).reset();
                        toastr.success(response.message, response.status, {closeButton: true});
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true});
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true});
                    }
                }
            });
        }

        // Submit edit rule
        $( "#editRuleSubmit" ).submit(function( event ) {
            event.preventDefault();
            var data = $('#editRuleSubmit').serialize();
            setRule("/rule/edit", data);
            $("#ruleModal").modal('toggle');
        });

        // Submit data to create new rule
        $( "#ruleSubmit" ).submit(function( event ) {
            event.preventDefault();
            var data = $('#ruleSubmit').serialize();
            console.log(data);
            setRule("/rule/create", data);
        });

        // Submit data to create new rule
        $("#ruleTable tbody").on("click","#deleteRule", function () {
