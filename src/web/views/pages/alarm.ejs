    function customSort(type){
        var sortedType = 0;
        if(type === '<div class="badge badge-danger" style="line-height: 1.5; display: block;">Error</div>'){
            sortedType = 0;
        }else if(type === '<div class="badge badge-warning" style="line-height: 1.5; display: block;">Warning</div>'){
            sortedType = 1;
        }else if(type === '<div class="badge badge-info" style="line-height: 1.5; display: block;">Info</div>'){
            sortedType = 2;
        }else{
            sortedType = 3;
        }
        return sortedType;
    }

    jQuery.fn.dataTableExt.oSort["typeSort-desc"] = function (x, y) {
        return customSort(x) < customSort(y);
    };
    jQuery.fn.dataTableExt.oSort["typeSort-asc"] = function (x, y) {
        return customSort(x) > customSort(y);
    }

    // Formatting function for row details
    function format (d) {
        var trs='';
        $.each($(d.detail),function(key,value){
            date = new Date(value);
            trs+='<tr><td style="border: none !important;">'+key+'</td><td style="border: none !important;">'+formatDate(date)+'</td></tr>';
        })
        // `d` is the original data object for the row
        return '<table class="table table-striped"  cellpadding="5" cellspacing="0" border="0" style="background-color: #FFFFFF; width: auto;  margin-bottom: 0px;">'+
            '<tbody>' + trs + '</tbody></table>';
    }


