    function send_alarm(url, type, datas, modalToggleId){
        $.ajax({
            url: url,
            type: type,
            data: datas,
            dataType: "json",
            success: function (response) {
                $(modalToggleId).modal('toggle');
                if (response.status === "success") {
                    toastr.success(response.message, response.status, {closeButton: true});
                } else if (response.status === "error") {
                    toastr.error(response.message, response.status, {closeButton: true});
                } else {
                    toastr.error("Undefined", "error", {closeButton: true});
                }
            }, error: function (response) {
                $(modalToggleId).modal('toggle');
                toastr.error("Ajax request error", "error", {closeButton: true});
            }
        });
    }

    $("#assignAlarmSubmit").submit(function( event ) {
        event.preventDefault();
        var emailUser = $("#userEmail").val();
        var alarmId = $("#alarmIdAssign").val();
        var many = $("#alarmManyAssign").val();
        if (emailUser && many){

            // 1 => one assign
            // 2 => one or more assign
            if(many === "1"){

                if(alarmId){
                    var datas = {email: emailUser, many: many, id: alarmId}
                    send_alarm("/alarm/assign", "get", datas, "#modalAssignAlarm")
                }else{
                    toastr.error("The alarm could not be assign to the user", "error", {closeButton: true});
                }
            }else if(many === "2"){

                var ids = []
                var table = $('#alarmTable').DataTable();
                $.each(table.rows('.selected').data(), function( key, value ) {
                    ids.push(value)
                });
                var datas = {email: emailUser, many: many, id: ids}
                send_alarm("/alarm/assign", "get", datas, "#modalAssignAlarm")
            }else{
                $("#modalAssignAlarm").modal('toggle');
                toastr.error("The alarm could not be assign to the user", "error", {closeButton: true});
            }
        }else{
            $("#modalAssignAlarm").modal('toggle');
            toastr.error("The alarm could not be assign to the user", "error", {closeButton: true});
        }
    });


