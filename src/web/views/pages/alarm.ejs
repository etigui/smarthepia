        var oTable = $('#alarmTable').dataTable();
        var aData = oTable.fnGetData(nRow);
        var id = aData._id;
        $("#alarmIdAssign").val(id);
        $("#alarmManyAssign").val(1);
    });

    // Submit and add comment for ack alarm
