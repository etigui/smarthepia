    function loadUserEmail(){
        $.ajax({
            url: "/alarm/email",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#userEmail').empty().append('<option value="" selected disabled hidden>Select user</option>');
                $.each(response.data, function (i, item) {
                    $('#userEmail').append($('<option>', {value: item.email, text : item.email}));
                });
                $('#userEmail').append($('<option>', {value: "anyone", text : "anyone"}));
            }, error: function (response) {
                toastr.error("Ajax request error", "error", {closeButton: true});
            }
        });
    }

    function loadBadge(){
        $.ajax({
            url: "/alarm/badge",
            type: "get",
            dataType: "json",
            success: function (response) {
                var span = $('#alarmBadge');
                $('#alarmTable').DataTable().ajax.reload();
                updateBadge(span, response.atype, response.count);
            }, error: function (response) {
                toastr.error("Ajax request error", "error", {closeButton: true});
            }
        });
