<script>

    onLoad();

    function onLoad(){
        genLocationTable();
        $("#buildingSelDiv").hide();
        $("#floorSelDiv").hide();
        $("#floorInDiv").hide();
        $("#roomInDiv").hide();
        $("#corridorInDiv").hide();
        $("#orientationInDiv").hide();
        $("#buildingInDiv").hide();
        $("#ruleSelDiv").hide();
        $("#commentInDiv").hide();
        loadBuilding('#buildingDevice');
    }

    function loadBadge(){
        $.ajax({
            url: "/alarm/badge",
            type: "get",
            dataType: "json",
            success: function (response) {
                var span = $('#alarmBadge');
                updateBadge(span, response.atype, response.count);
            }
        });
    }

    function loadBuilding(id){

        // Fill in device load building select option
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $.each(response.data, function (i, item) {
                    if(item.type === "Building"){
                        $(id).append($('<option>', {
                            value: item.id,
                            text : item.name
                        }));
                    }
                });
            }
        });
    }

    // Fill in automation rule name select option
    function loadRules(){
        $.ajax({
            url: "/rule/listname",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#ruleSelect').empty().append('<option value="" selected disabled hidden>Select rule</option>');
                $.each(response.data, function (i, item) {
                    $('#ruleSelect').append($('<option>', {
                        value: item.name,
                        text : item.name
                    }));
                });
            }
        });
    }

    function loadRulesEdit(){
        $.ajax({
            url: "/rule/listname",
            type: "get",
            dataType: "json",
            success: function (response) {
                $.each(response.data, function (i, item) {
                    $('#ruleEdit').append($('<option>', {
                        value: item.name,
                        text : item.name
                    }));
                });
            }
        });
    }

    // Sens ajax request to add, delete, edit rule
    function setLocation(url, datas){
        $.ajax({
            url: url,
            type: "post",
            dataType: "json",
            data: datas,
            success: function (response) {
                if (response.status === "success") {
                    $('#locationTable').DataTable().ajax.reload();
                    toastr.success(response.message, response.status, {closeButton: true});
                } else if (response.status === "error") {
                    toastr.error(response.message, response.status, {closeButton: true});
                } else {
                    toastr.error("Undefined", "error", {closeButton: true});
                }
            }
        });
    }

    // Edit rule
    $("#locationTable tbody").on("click","#editLocation", function () {
        $('#ruleEdit').empty();
        loadRulesEdit();
        var nRow = $(this).parents('tr')[0];
        var oTable = $('#locationTable').dataTable();
        var aData = oTable.fnGetData(nRow);
        $('#nameEdit').val(aData.name);
        $('#idEdit').val(aData._id);
        $('#typeEdit').val(aData.type);


        // Add oprientation and rule if room
        if(aData.type === "Room"){
            $('#divOrientationEdit').show();
            $('#divRuleEdit').show();
            $('#locationNameEdit').val(aData.name);
            $('#orientationEdit').val(aData.orientation);
            $('#enableEdit').val(aData.enable ? "true": "false");
            $('#ruleEdit').val(aData.rules);
            $('#commentEdit').val(aData.comment);
        }else{

            $('#divOrientationEdit').hide();
            $('#divRuleEdit').hide();
            $('#commentEdit').val(aData.comment);
            $('#locationNameEdit').val(aData.name);
        }
    });

    // Submit edit location
    $( "#editLocationSubmit" ).submit(function( event ) {
        event.preventDefault();
        var data = $('#editLocationSubmit').serialize();
        setLocation("/location/edit", data);
        $("#modalEditLocation").modal('toggle');
    });

    // Submit data delete location
    $("#locationTable tbody").on("click","#deleteLocationSubmit", function () {
        event.preventDefault();
        var nRow = $(this).parents('tr')[0];
        var oTable = $('#locationTable').dataTable();
        var aData = oTable.fnGetData(nRow);
        setLocation("/location/delete", {name: aData.name, id: aData._id, childId: aData.id});
    });

    // Load datatable
    function genLocationTable(){
        $('#locationTable').dataTable({
            dom: 'Bfrtip',
            buttons: [{
                extend: 'collection',
                text: 'Option',
                className: 'btn btn-primary',
                buttons: [
                    {
                        extend: 'pdf',
                        text: "Export as PDF",
                        exportOptions: {

                            columns: [0, 1, 2, 3, 4, 5, 6 ]

                        }
                    },
                    {
                        extend: 'csv',
                        text: "Export as CSV",
                        exportOptions: {
                            columns: [ 0, 1, 2, 3, 4, 5, 6 ]

                        }
                    },{
                        extend: 'excel',
                        text: "Export as Excel",
                        exportOptions: {
                            columns: [ 0, 1, 2, 3, 4, 5, 6 ]

                        }
                    },{
                        extend: 'copy',
                        text: "Copy to clipboard",
                        exportOptions: {
                            columns: [ 0, 1, 2, 3, 4, 5, 6 ]

                        }
                    }
                    ,'pageLength','colvis'
                ]}],
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            autoWidth: false,
            destroy: true,
            searching: true,
            type: 'GET',
            ajax: "/location/listall",
            columns: [
                { data: "name"},
                { data: "type"},
                { data: "orientation"},
                { data: "rules"},
                { data: "parentrelation"},
                { data: "enable"},
                { data: "comment"},
                {},
                { data: "parent"},
                { data: "_id"},
                { data: "id"}

            ], columnDefs: [{
                targets: 7,
                searching: false,
                orderable: false,
                data: null,
                className: "text-center align-middle last",
                render: function (data, type, full, meta){
                    return '<div class="btn-group">\n' +
                        '    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\n' +
                        '        Action\n' +
                        '    </button>\n' +
                        '    <div class="dropdown-menu" x-placement="bottom-start">\n' +
                        '        <button id="editLocation" class="dropdown-item" type="button" data-toggle="modal" data-target="#modalEditLocation" >Edit</button>\n' +
                        '        <button id="deleteLocationSubmit" class="dropdown-item" type="button">Delete</button>\n' +
                        '    </div>\n' +
                        '</div>';
                }
            }, {targets: 4, className: "text-center align-middle"},
                {targets: 3, className: "text-center align-middle"},
                {targets: 2, className: "text-center align-middle"},
                {targets: 1, className: "text-center align-middle"},
                {targets: 0, className: "text-center align-middle"},
                {targets: 5, className: "text-center align-middle"},
                {targets: 6, className: "text-center align-middle"},
                {targets: 8, "visible": false, "searchable": false},
                {targets: 9, "visible": false, "searchable": false},
                {targets: 10, "visible": false, "searchable": false}]
        });
    }

    // Create new location (Building, Floor, Room)
    $("#createLocationSubmit").submit(function( event ) {
        event.preventDefault();
        var noError = true;
        var selectedLocation = $("#locationSelect option:selected").text();
        var selectedBuilding = $("#buildingSelect option:selected").text();
        var selectedFloor = $("#floorSelect option:selected").text();
        var parentRelation = {};

        // Check if select selected and input name not empty
        if(selectedLocation === "Select location") {
            toastr.error("You must choose a location", "error", {closeButton: true});
            noError = false;
        } else if(selectedLocation === "Building") {
            parentRelation = {"buildingName": "-", "floorName": "No floor"};
            if($("#buildingInput").val() === ""){
                toastr.error("You must choose a building name", "error", {closeButton: true});
                noError = false;
            }
        }
        else if(selectedLocation === "Floor") {
            parentRelation = {"buildingName": selectedBuilding, "floorName": "No floor"};
            if(selectedBuilding === "Select building") {
                toastr.error("You must choose a building location", "error", {closeButton: true});
                noError = false;
            }
            if($("#floorInput").val() === ""){
                toastr.error("You must choose a floor name", "error", {closeButton: true});
                noError = false;
            }
        }
        else if(selectedLocation === "Room") {
            parentRelation = {"buildingName": selectedBuilding, "floorName": selectedFloor};
            if(selectedBuilding === "Select building" || $("#floorSelect option:selected").text() === "Select floor" || $("#ruleSelect option:selected").text() === "Select rule") {
                toastr.error("You must choose rule, building and floor location", "error", {closeButton: true});
                noError = false;
            }
            if($("#roomInput").val() === ""){
                toastr.error("You must choose a room name", "error", {closeButton: true});
                noError = false;
            }
        }else if(selectedLocation === "Corridor"){
            parentRelation = {"buildingName": selectedBuilding, "floorName": selectedFloor};
            if(selectedBuilding === "Select building" || $("#floorSelect option:selected").text() === "Select floor") {
                toastr.error("You must choose rule, building and floor location", "error", {closeButton: true});
                noError = false;
            }
            if($("#corridorInput").val() === ""){
                toastr.error("You must choose a corridor name", "error", {closeButton: true});
                noError = false;
            }
        }
        if(noError) {
            $.ajax({
                url: "/location/create",
                type: "post",
                dataType: "json",
                data:  $('#createLocationSubmit').serialize() + "&" + jQuery.param(parentRelation),
                success: function (response) {

                    // TODO reload dependency inventory
                    $("#createLocationSubmit").get(0).reset();
                    $('#locationTable').DataTable().ajax.reload();
                    onLoad();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true});
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true});
                    } else {
                        toastr.error("Undefined success response", "error", {closeButton: true});
                    }
                }
            });
        }
    });


    // When create dynamic object we must use "on"
    // Fillin floor
    $(document).on('change', "#buildingSelect", function(){
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#floorSelect').empty().append('<option value="" selected disabled hidden>Select floor</option>');
                $.each(response.data, function (i, item) {

                    if(item.type === "Floor"){

                        // Check if parent floor id match with building id
                        if($("#buildingSelect option:selected" ).val() === item.parent.toString()){
                            $('#floorSelect').append($('<option>', {value: item.id, text : item.name}));
                        }
                    }
                });
            }
        });
    });

    // Location select change
    $('#locationSelect').change(function(){

        // Add or remove select and input in function of location type
        if($(this).val() === "Building") {
            $("#buildingSelDiv").hide();
            $("#floorSelDiv").hide();
            $("#floorInDiv").hide();
            $("#roomInDiv").hide();
            $("#corridorInDiv").hide();
            $("#orientationInDiv").hide();
            $("#ruleSelDiv").hide();
            $("#buildingInDiv").show();
            $("#commentInDiv").show();
        }else if($(this).val() === "Floor") {
            $("#floorSelDiv").hide();
            $("#roomInDiv").hide();
            $("#corridorInDiv").hide();
            $("#buildingInDiv").hide();
            $("#orientationInDiv").hide();
            $("#ruleSelDiv").hide();
            $("#buildingSelDiv").show();
            $("#floorInDiv").show();
            $("#commentInDiv").show();

            // Reset building select option and get building in db
            $('#buildingSelect').empty().append('<option value="" selected disabled hidden>Select building</option>');
            loadBuilding('#buildingSelect');
        }else if($(this).val() === "Room"){
            $("#floorInDiv").hide();
            $("#corridorInDiv").hide();
            $("#buildingInDiv").hide();
            $("#ruleSelDiv").show();
            $("#roomInDiv").show();
            $("#buildingSelDiv").show();
            $("#floorSelDiv").show();
            $("#orientationInDiv").show();
            $("#commentInDiv").show();

            // Reset floor value
            $('#floorSelect').empty().append('<option value="" selected disabled hidden>Select floor</option>');

            // Reset building select option and get building in db
            $('#buildingSelect').empty().append('<option value="" selected disabled hidden>Select building</option>');
            loadBuilding('#buildingSelect');

            // Load room rule
            loadRules();
        }else if($(this).val() === "Corridor") {
            $("#floorInDiv").hide();
            $("#buildingInDiv").hide();
            $("#roomInDiv").hide();
            $("#orientationInDiv").hide();
            $("#ruleSelDiv").hide();
            $("#corridorInDiv").show();
            $("#buildingSelDiv").show();
            $("#floorSelDiv").show();
            $("#commentInDiv").show();

            // Reset building select option and get building in db
            $('#buildingSelect').empty().append('<option value="" selected disabled hidden>Select building</option>');
            loadBuilding('#buildingSelect');
        }
    });

