<script>

    onLoad();

    function onLoad(){

        genLocationTable();

        $('#buildingDiv').hide();
        $('#floorDiv').hide();
        $('#roomDiv').hide();
        $('#orientationDiv').hide();
        $('#ruleDiv').hide();

        loadBuilding('#buildingDevice');
    }

    function loadBuilding(id){

        // Fill in device load building select option
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $.each(response.data, function (i, item) {
                    if(item.type === "Building"){
                        $(id).append($('<option>', {
                            value: item.id,
                            text : item.name
                        }));
                    }
                });
            }
        });
    }

    // Fill in automation rule name select option
    function loadRules(){
        $.ajax({
            url: "/automation/listname",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#ruleCreate').append($('<option>', {value: "", text : "Select rule", selected:"", disabled: "", hidden: ""}));
                $.each(response.data, function (i, item) {
                    $('#ruleCreate').append($('<option>', {
                        value: item.name,
                        text : item.name
                    }));
                });
            }
        });
    }

    function genLocationTable(){
        $('#locationTable').dataTable({
            dom: 'lBfrtip',
            buttons: [
                'colvis','copy', 'csv', 'excel', 'pdf', 'print'
            ],
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            autoWidth: false,
            destroy: true,
            searching: true,
            type: 'GET',
            ajax: "/location/listall",
            columns: [
                { data: "name"},
                { data: "type"},
                { data: "orientation"},
                { data: "rules"},
                { data: "parent"},
                { data: "enable"},
                { data: "comment"},
                {}
            ], columnDefs: [{
                targets: 7,
                searching: false,
                orderable: false,
                data: null,
                className: "text-center align-middle",
                render: function (data, type, full, meta){
                    return '<div class="btn-group">\n' +
                        '    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\n' +
                        '        Action\n' +
                        '    </button>\n' +
                        '    <div class="dropdown-menu" x-placement="bottom-start">\n' +
                        '        <button id="editUser" class="dropdown-item" type="button" data-toggle="modal" data-target="#modalEditUser" >Edit</button>\n' +
                        '        <button id="deleteUserSubmit" class="dropdown-item" type="button">Delete</button>\n' +
                        '    </div>\n' +
                        '</div>';
                }
            }, {targets: 4, className: "text-center align-middle"},
                {targets: 3, className: "text-center align-middle"},
                {targets: 2, className: "text-center align-middle"},
                {targets: 1, className: "text-center align-middle"},
                {targets: 0, className: "text-center align-middle"},
                {targets: 5, className: "text-center align-middle"},
                {targets: 6, className: "text-center align-middle"}]
        });
    }

    // Create new location (Building, Floor, Room)
    $("#createLocationSubmit").submit(function( event ) {
        event.preventDefault();
        var noError = true;
        var selectedLocation = $("#locationCreate option:selected").text();
        var selectedBuilding = $("#buildingCreate option:selected").text();
        // Select error if not selected
        if(selectedLocation === "Select location") {
            toastr.error("You must choose a location", "error", {closeButton: true});
            noError = false;
        }
        if(selectedLocation === "Floor") {
            if(selectedBuilding === "Select building") {
                toastr.error("You must choose a building location", "error", {closeButton: true});
                noError = false;
            }
        }
        if(selectedLocation === "Room") {
            if(selectedBuilding === "Select building" || $("#floorCreate option:selected").text() === "Select floor" || $("#ruleCreate option:selected").text() === "Select rule") {
                toastr.error("You must choose rule, building and floor location", "error", {closeButton: true});
                noError = false;
            }
        }

        if(noError) {
            $.ajax({
                url: "/location/create",
                type: "post",
                dataType: "json",
                data:  $('#createLocationSubmit').serialize(),
                success: function (response) {

                    // TODO reload dependency inventory
                    $("#createLocationSubmit").get(0).reset();
                    $('#locationTable').DataTable().ajax.reload();
                    onLoad();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }
    });

    // When create dynamic object we must use "on"
    // Fillin floor
    $(document).on('change', "#buildingCreate", function(){
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#floorCreate').empty().append('<option value="" selected disabled hidden>Select floor</option>');
                $.each(response.data, function (i, item) {

                    if(item.type === "Floor"){

                        // Check if parent floor id match with building id
                        if($("#buildingCreate option:selected" ).val() === item.parent.toString()){
                            $('#floorCreate').append($('<option>', {value: item.id, text : item.name}));
                        }
                    }
                });
            }
        });
    });

    // Location select change
    $('#locationCreate').change(function(){
        if($(this).val() === "Building"){
            $("#buildingCreate").replaceWith('<input type="text" name="buildingCreate" id="buildingCreate" class="form-control square" placeholder="Building" autocomplete="off">');
            $('#buildingDiv').show();
            $('#floorDiv').hide();
            $('#roomDiv').hide();
            $('#orientationDiv').hide();
            $('#ruleDiv').hide();

        }else if($(this).val() === "Floor"){
            $("#buildingCreate").replaceWith('<select id="buildingCreate" name="buildingCreate" class="form-control square"></select>');
            $("#floorCreate").replaceWith('<input type="text" name="floorCreate" id="floorCreate" class="form-control square" placeholder="Floor" autocomplete="off">');

            // Reset building select option
            $('#buildingCreate').empty().append('<option value="" selected disabled hidden>Select building</option>');
            loadBuilding('#buildingCreate')

            $('#buildingDiv').show();
            $('#floorDiv').show();
            $('#roomDiv').hide();
            $('#orientationDiv').hide();
            $('#ruleDiv').hide();

        }else if($(this).val() === "Room"){
            $("#buildingCreate").replaceWith('<select id="buildingCreate" name="buildingCreate" class="form-control square"></select>');
            $("#floorCreate").replaceWith('<select id="floorCreate" name="floorCreate" class="form-control square"></select>');
            $("#roomCreate").replaceWith('<input type="text" name="roomCreate" id="roomCreate" class="form-control square" placeholder="Room" autocomplete="off">');

            // Reset building and floor select option
            $('#buildingCreate').empty().append('<option value="" selected disabled hidden>Select building</option>');
            loadBuilding('#buildingCreate');
            $('#floorCreate').empty().append('<option value="" selected disabled hidden>Select floor</option>');
            $('#ruleCreate').empty();
            loadRules();

            $('#buildingDiv').show();
            $('#floorDiv').show();
            $('#roomDiv').show();
            $('#orientationDiv').show();
            $('#ruleDiv').show();
        }
    });

    // BEGIN Server time section /////////////////////////////////////////////////////////////
    //Users time
    var timeLocal = new Date();
    //Servers time
    var timeServer = new Date("<%= dateTime %>");

    //Calculate the difference (returns milliseconds)
    var millDiff = timeLocal - timeServer;

    //initalize the clock on loading of page
    window.onload = function () {
        //set the interval so clock ticks
        var timeClock = setInterval("timeTick()", 10);
    };

    function formatDate(timeLocal){
        var hour = timeLocal.getHours();
        var min = timeLocal.getMinutes();
        var sec = timeLocal.getSeconds();
        var day = timeLocal.getDate();
        var month = (timeLocal.getMonth() + 1);
        var year = timeLocal.getFullYear();
        hour = hour < 10 ? '0'+ hour : hour;
        min= min < 10 ? '0'+ min : min;
        sec = sec < 10 ? '0'+ sec : sec;
        day = day < 10 ? '0'+ day : day;
        month = month < 10 ? '0'+ month : month;
        return day + "." + month + "." + year +" " + hour + ":" + min + ":" + sec;
    }

    //The ticking clock function
    function timeTick(){
        //grab updated time
        timeLocal = new Date();
        //add time difference
        timeLocal.setMilliseconds(timeLocal.getMilliseconds() - millDiff);
        //display the value

        document.getElementById("serverTime").innerHTML = formatDate(timeLocal);
    }
    // END Server time section /////////////////////////////////////////////////////////////

</script>

