<script>

    onLoad();

    function onLoad(){
        $('#buildingDiv').hide();
        $('#floorDiv').hide();
        $('#roomDiv').hide();
        $('#orientationDiv').hide();
        $('#ruleDiv').hide();

        loadBuilding('#buildingDevice');
    }

    function loadBuilding(id){

        // Fill in device load building select option
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $.each(response.data, function (i, item) {
                    if(item.type === "Building"){
                        $(id).append($('<option>', {
                            value: item.id,
                            text : item.name
                        }));
                    }
                });
            }
        });
    }

    // Create new location (Building, Floor, Room)
    $("#createLocationSubmit").submit(function( event ) {
        event.preventDefault();
        /*$.ajax({
            url: "/location/create",
            type: "post",
            dataType: "json",
            data: "",//$('#createDependencySubmit').serialize(),
            success: function (response) {
                console.log(response);
            }
        });*/
    });

    // When create dynamic object we must use "on"
    // Fillin floor
    $(document).on('change', "#buildingCreate", function(){
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#floorCreate').empty().append('<option value="" selected disabled hidden>Select floor</option>');
                $.each(response.data, function (i, item) {

                    if(item.type === "Floor"){

                        // Check if parent floor id match with building id
                        if($("#buildingCreate option:selected" ).val() === item.parent.toString()){
                            $('#floorCreate').append($('<option>', {value: item.id, text : item.name}));
                        }
                    }
                });
            }
        });
    });

    // Location select change
    $('#locationCreate').change(function(){
        if($(this).val() === "Building"){
            $("#buildingCreate").replaceWith('<input type="text" name="buildingCreate" id="buildingCreate" class="form-control square" placeholder="Building" autocomplete="off" required>');
            $('#buildingDiv').show();
            $('#floorDiv').hide();
            $('#roomDiv').hide();
            $('#orientationDiv').hide();
            $('#ruleDiv').hide();

        }else if($(this).val() === "Floor"){
            $("#buildingCreate").replaceWith('<select id="buildingCreate" name="buildingCreate" class="form-control square"></select>');
            $("#floorCreate").replaceWith('<input type="text" name="floorCreate" id="floorCreate" class="form-control square" placeholder="Floor" autocomplete="off" required>');

            // Reset building select option
            $('#buildingCreate').empty().append('<option value="" selected disabled hidden>Select building</option>');
            loadBuilding('#buildingCreate')

            $('#buildingDiv').show();
            $('#floorDiv').show();
            $('#roomDiv').hide();
            $('#orientationDiv').hide();
            $('#ruleDiv').hide();

        }else if($(this).val() === "Room"){
            $("#buildingCreate").replaceWith('<select id="buildingCreate" name="buildingCreate" class="form-control square"></select>');
            $("#floorCreate").replaceWith('<select id="floorCreate" name="floorCreate" class="form-control square"></select>');
            $("#roomCreate").replaceWith('<input type="text" name="roomCreate" id="roomCreate" class="form-control square" placeholder="Room" autocomplete="off" required>');

            // Reset building and floor select option
            $('#buildingCreate').empty().append('<option value="" selected disabled hidden>Select building</option>');
            loadBuilding('#buildingCreate')
            $('#floorCreate').empty().append('<option value="" selected disabled hidden>Select floor</option>');

            $('#buildingDiv').show();
            $('#floorDiv').show();
            $('#roomDiv').show();
            $('#orientationDiv').show();
            $('#ruleDiv').show();
        }
    });

</script>

