<script>

        onLoad();

        function onLoad(){
            $('#rulesDiv').hide();
        }

        // When we wanna load the rule info by name
        $(document).on('change','#rulesName',function(){

            // Check is select => prevent input change
            if($(this).is("select")){
                loadRuleInfo();
            }
        });

        // Check action wanted (edit/add rules)
        $("#action").change(function() {
            var selected = $("#action option:selected").text();
            var name = $("#rulesName");
            if(selected === "Add"){
                $('#rulesDiv').show();
                name.replaceWith('<input type="text" name="rulesName" id="rulesName" class="form-control square" placeholder="Rule name" autocomplete="off" required>');
            }else if(selected === "Edit" || selected === "Delete"){
                $('#rulesDiv').show();
                name.replaceWith('<select name="rulesName" id="rulesName" class="form-control square" required><option value="" selected="" disabled="" hidden="">Select rule</option></select>');
                name.empty()
                loadRulesName();
            }
        });

        // Submit data to add, edit or delete
        $( "#automationSubmit" ).submit(function( event ) {
            var data = $('#automationSubmit').serialize();
            var selected = $("#action option:selected").text();
            event.preventDefault();
            if(selected === "Add"){
                addEditeRules('create', data);
            }else if(selected === "Edit"){
                addEditeRules('edit', data);
            }else if(selected === "Delete"){
                removeRuleByName($("#rulesName option:selected").text());
            } else{
                toastr.error("You must choose a rule action", "error", {closeButton: true});
            }
        });

        // Fill in automation rule name select option
        function loadRulesName(){
            $.ajax({
                url: "/automation/listname",
                type: "get",
                dataType: "json",
                success: function (response) {
                    $('#rulesName').append($('<option>', {value: "", text : "Select rule", selected:"", disabled: "", hidden: ""}));
                    $.each(response.data, function (i, item) {
                            $('#rulesName').append($('<option>', {
                                value: item.name,
                                text : item.name
                            }));
                    });
                }
            });
        }

        function loadRuleInfo(){
            $.ajax({
                url: "/automation/list",
                type: "get",
                dataType: "json",
                data: {name: $("#rulesName option:selected").text()},
                success: function (response) {
                    $('#dayTimeFrom').val(response.data.dt);
                    $('#nightTimeFrom').val(response.data.nt);
                    $('#temp').val(response.data.temp);
                    $('#humidity').val(response.data.humidity);
                    $('#dnRulesValve option:eq('+response.data.vdr+')').prop('selected', 'selected');
                    $('#dayRulesBlind option:eq('+response.data.bdr+')').prop('selected', 'selected');
                    $('#nightRulesBlind option:eq('+response.data.bnr+')').prop('selected', 'selected');

                    if(response.data.active){
                        $('#active').prop('checked', true);
                    }else{
                        $('#active').prop('checked', false);
                    }
                }
            });
        }

        function removeRuleByName(name){
            $.ajax({
                url: "/automation/delete",
                type: "post",
                dataType: "json",
                data: {name: name},
                success: function (response) {

                    // Reset to default
                    $("#automationSubmit").get(0).reset();
                    $('#action').prop('selectedIndex',0);
                    $('#rulesDiv').hide();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }

        function addEditeRules(action, data){
            $.ajax({
                url: "/automation/" + action,
                type: "post",
                dataType: "json",
                data: data,
                success: function (response) {

                    // Reset to default
                    $("#automationSubmit").get(0).reset();
                    $('#action').prop('selectedIndex',0);
                    $('#rulesDiv').hide();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }

        // BEGIN Server time section /////////////////////////////////////////////////////////////
        //Users time
        var timeLocal = new Date();
        //Servers time
        var timeServer = new Date("<%= dateTime %>");

        //Calculate the difference (returns milliseconds)
        var millDiff = timeLocal - timeServer;

        //initalize the clock on loading of page
        window.onload = function () {
            //set the interval so clock ticks
            var timeClock = setInterval("timeTick()", 10);
        };

        function formatDate(timeLocal){
            var hour = timeLocal.getHours();
            var min = timeLocal.getMinutes();
            var sec = timeLocal.getSeconds();
            var day = timeLocal.getDay();
            var month = (timeLocal.getMonth() + 1);
            var year = timeLocal.getFullYear();
            hour = hour < 10 ? '0'+ hour : hour;
            min= min < 10 ? '0'+ min : min;
            sec = sec < 10 ? '0'+ sec : sec;
            day = day < 10 ? '0'+ day : day;
            month = month < 10 ? '0'+ month : month;
            return day + "." + month + "." + year +" " + hour + ":" + min + ":" + sec;
        }

        //The ticking clock function
        function timeTick(){
            //grab updated time
            timeLocal = new Date();
            //add time difference
            timeLocal.setMilliseconds(timeLocal.getMilliseconds() - millDiff);
            //display the value

            document.getElementById("serverTime").innerHTML = formatDate(timeLocal);
        }
        // END Server time section /////////////////////////////////////////////////////////////
</script>
