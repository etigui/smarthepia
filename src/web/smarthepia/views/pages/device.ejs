<script>

    onLoad();

    function onLoad(){

        genDeviceTable();

        // Fill in device load dependency select option
        $.ajax({
            url: "/dependency/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#dependencyDevice').empty().append('<option value="" selected disabled hidden>Select dependency</option>');
                $.each(response.data, function (i, item) {
                    $('#dependencyDevice').append($('<option>', {
                        value: item.depname,
                        text : item.depname
                    }));
                });
            }
        });

        // Fill in device load building select option
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $.each(response.data, function (i, item) {
                    if(item.type === "Building"){
                        $('#buildingDevice').append($('<option>', {
                            value: item.id,
                            text : item.name
                        }));
                    }
                });
            }
        });
    }

    function genDeviceTable(){

        $('#deviceTable').dataTable({
            dom: 'lBfrtip',
            buttons: [
                'colvis','copy', 'csv', 'excel', 'pdf', 'print'
            ],
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            autoWidth: false,
            destroy: true,
            searching: true,
            type: 'GET',
            ajax: "/device/listall",
            columns: [
                { data: "name"},
                { data: "type"},
                { data: "address"},
                { data: "dependency"},
                { data: "parent"},
                { data: "enable"},
                { data: "comment"},
                {}
            ], columnDefs: [{
                targets: 7,
                searching: false,
                orderable: false,
                data: null,
                className: "text-center align-middle",
                render: function (data, type, full, meta){
                    return '<div class="btn-group">\n' +
                        '    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\n' +
                        '        Action\n' +
                        '    </button>\n' +
                        '    <div class="dropdown-menu" x-placement="bottom-start">\n' +
                        '        <button id="editUser" class="dropdown-item" type="button" data-toggle="modal" data-target="#modalEditUser" >Edit</button>\n' +
                        '        <button id="deleteUserSubmit" class="dropdown-item" type="button">Delete</button>\n' +
                        '    </div>\n' +
                        '</div>';
                }
            },  {targets: 4, className: "text-center align-middle"},
                {targets: 3, className: "text-center align-middle"},
                {targets: 2, className: "text-center align-middle"},
                {targets: 1, className: "text-center align-middle"},
                {targets: 0, className: "text-center align-middle"},
                {targets: 5, className: "text-center align-middle"},
                {targets: 6, className: "text-center align-middle"}]
        });
    }

    // Fillin floor select option
    $('#buildingDevice').change(function() {
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#floorDevice').empty().append('<option value="" selected disabled hidden>Select floor</option>');
                $('#roomDevice').empty().append('<option value="" selected disabled hidden>Select room</option>');
                $.each(response.data, function (i, item) {
                    if(item.type === "Floor"){

                        // Check if parent floor id match with building id
                        if($("#buildingDevice option:selected" ).val() === item.parent.toString()){
                            $('#floorDevice').append($('<option>', {value: item.id, text : item.name}));
                        }
                    }
                });
            }
        });
    });

    // Fillin Room option select
    $('#floorDevice').change(function() {
        $.ajax({
            url: "/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $('#roomDevice').empty().append('<option value="" selected disabled hidden>Select room</option>');
                $.each(response.data, function (i, item) {

                    if(item.type === "Room"){

                        // Check if parent room id match with floor id
                        if($("#floorDevice option:selected" ).val() === item.parent.toString()){
                            $('#roomDevice').append($('<option>', {value: item.id, text : item.name}));
                        }
                    }
                });
            }
        });
    });

    // Create new location (Building, Floor, Room)
    $("#createDeviceSubmit").submit(function( event ) {
        event.preventDefault();

        // Select error if not selected
        if($("#dependencyDevice option:selected").text() === "Select dependency") {
            toastr.error("You must choose a dependency", "error", {closeButton: true});
        }else if($("#buildingDevice option:selected").text() === "Select building") {
            toastr.error("You must choose a building", "error", {closeButton: true});
        }else if($("#floorDevice option:selected").text() === "Select floor") {
            toastr.error("You must choose a floor", "error", {closeButton: true});
        }else if($("#roomDevice option:selected").text() === "Select room") {
            toastr.error("You must choose a room", "error", {closeButton: true});
        }else if($("#typeDevice option:selected").text() === "Select type") {
            toastr.error("You must choose a type", "error", {closeButton: true});
        }else{
            $.ajax({
                url: "/device/create",
                type: "post",
                dataType: "json",
                data: $('#createDeviceSubmit').serialize(),
                success: function (response) {

                    // TODO reload dependency inventory
                    $("#createDeviceSubmit").get(0).reset();
                    $('#deviceTable').DataTable().ajax.reload();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }
    });

    // BEGIN Server time section /////////////////////////////////////////////////////////////
    //Users time
    var timeLocal = new Date();
    //Servers time
    var timeServer = new Date("<%= dateTime %>");

    //Calculate the difference (returns milliseconds)
    var millDiff = timeLocal - timeServer;

    //initalize the clock on loading of page
    window.onload = function () {
        //set the interval so clock ticks
        var timeClock = setInterval("timeTick()", 10);
    };

    function formatDate(timeLocal){
        var hour = timeLocal.getHours();
        var min = timeLocal.getMinutes();
        var sec = timeLocal.getSeconds();
        var day = timeLocal.getDate();
        var month = (timeLocal.getMonth() + 1);
        var year = timeLocal.getFullYear();
        hour = hour < 10 ? '0'+ hour : hour;
        min= min < 10 ? '0'+ min : min;
        sec = sec < 10 ? '0'+ sec : sec;
        day = day < 10 ? '0'+ day : day;
        month = month < 10 ? '0'+ month : month;
        return day + "." + month + "." + year +" " + hour + ":" + min + ":" + sec;
    }

    //The ticking clock function
    function timeTick(){
        //grab updated time
        timeLocal = new Date();
        //add time difference
        timeLocal.setMilliseconds(timeLocal.getMilliseconds() - millDiff);
        //display the value

        document.getElementById("serverTime").innerHTML = formatDate(timeLocal);
    }
    // END Server time section /////////////////////////////////////////////////////////////

</script>

