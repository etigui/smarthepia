<script>

    genUserTable();

    function genUserTable(){
        $('#example').dataTable({
            autoWidth: false,
            destroy: true,
            searching: true,
            type: 'GET',
            ajax: "/manager/users/list",
            columns: [
                { data: "firstname"},
                { data: "lastname"},
                { data: "email"},
                { data: "enable"},
                { data: "permissions"},
                { data: "action"}
            ], columnDefs: [{
                targets: 5,
                searching: false,
                orderable: false,
                data: null,
                className: "text-center",
                render: function (data, type, full, meta){
                    return '<div class="btn-group mr-1 mb-1">\n' +
                        '    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">\n' +
                        '        Action\n' +
                        '    </button>\n' +
                        '    <div class="dropdown-menu" x-placement="bottom-start">\n' +
                        '        <button id="editUser" class="dropdown-item" type="button" data-toggle="modal" data-target="#modalEditUser" >Edit</button>\n' +
                        '        <button id="deleteUserSubmit" class="dropdown-item" type="button">Delete</button>\n' +
                        '    </div>\n' +
                        '</div>';
                }
            }, {targets: 4,className: "text-center", render: function (data, type, full, meta){
                    if(data === 0){return 'user';}
                    if(data === 1) {return 'manager';}
                    if(data === 2){return 'admin';}
                }}, {targets: 3, className: "text-center"},
                {targets: 2, className: "text-center"},
                {targets: 1, className: "text-center"},
                {targets: 0, className: "text-center"}]
        });
    }

    $("#createUserSubmit").submit(function( event ) {
        event.preventDefault();
        $.ajax({
            url: "/manager/users/create",
            type: "post",
            dataType:"json",
            data: $("#createUserSubmit").serialize(),
            success: function (response) {
                $('#example').DataTable().ajax.reload();
                $("#createUserSubmit").get(0).reset();
                if(response.status === "success"){
                    toastr.success(response.message , response.status, {closeButton: true})
                }else if(response.status === "error"){
                    toastr.error(response.message, response.status, {closeButton: true})
                }else{
                    toastr.error("Undefined", "error", {closeButton: true})
                }
            }
        });
    });

    $("#example tbody").on("click","#deleteUserSubmit", function () {
        alert("Delete");
        var row = $(this).parents('tr').find("td");
        var userMail = row[2].innerText
        if(userMail){
            $.ajax({
                url: "/manager/users/delete",
                type: "post",
                data: {email: userMail},
                dataType:"json",
                success: function (response) {
                    $('#example').DataTable().ajax.reload();
                    if(response.status === "success"){
                        toastr.success(response.message , response.status, {closeButton: true})
                    }else if(response.status === "error"){
                        toastr.error(response.message, response.status, {closeButton: true})
                    }else{
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }
    });


    $("#editUserSubmit").submit(function( event ) {
        event.preventDefault();
        emailUser = $("#emailUserEdit").val();
        permissionUser = $("#permissionUserEdit").val();
        activeUser = $("#activeUserEdit").val();
        if (emailUser && permissionUser && activeUser) {
            $.ajax({
                url: "/manager/users/edit",
                type: "post",
                data: {
                    email: emailUser,
                    enable: activeUser,
                    permissions: permissionUser
                },
                dataType: "json",
                success: function (response) {
                    $('#modalEditUser').modal('toggle');
                    $('#example').DataTable().ajax.reload();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }
    });


    $("#example tbody").on('click',"#editUser", function () {
        var row = $(this).parents('tr').find("td");
        $("#firstnameUserEdit").val(row[0].innerText);
        $("#lastnameUserEdit").val(row[1].innerText);
        $("#emailUserEdit").val(row[2].innerText);
        $("#activeUserEdit").val(row[3].innerText);
        $("#permissionUserEdit").val(row[4].innerText);
    });
</script>

