<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-1">
                <h3 class="content-header-title">Profile</h3>
                <span><%= dateTime %></span>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-square-controls">Personal informations</h4>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form id="editUser" class="form">
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label for="donationinput2">Email</label>
                                                <input type="email" id="email" class="form-control square" placeholder="email" name="email" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="donationinput2">First name</label>
                                                <input type="text" id="fname" class="form-control square" placeholder="First name" name="fname" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="donationinput2">Last name</label>
                                                <input type="text" id="lname" class="form-control square" placeholder="Last name" name="lname" required>
                                            </div>
                                        </div>
                                        <div class="form-actions right">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-check-square-o"></i> Save
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-square-controls">Change password</h4>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form id="editPassword" class="form">
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label for="donationinput2">Current password
                                                    <span class="danger">*</span>
                                                </label>
                                                <input type="password" id="cpassword" class="form-control square form-control position-maxlength" placeholder="password" name="cpassword" maxlength="30" aria-invalid="true" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="donationinput2">New password
                                                    <span class="danger">*</span>
                                                </label>
                                                <input type="password" id="npassword" class="form-control square form-control position-maxlength" placeholder="password" name="npassword" maxlength="30" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="donationinput2">Confirme new password
                                                    <span class="danger">*</span>
                                                </label>
                                                <input type="password" id="cnpassword" class="form-control square form-control position-maxlength" placeholder="password" name="cnpassword" maxlength="30" required>
                                            </div>
                                        </div>
                                        <div class="form-actions right">
                                            <button type="reset" class="btn btn-warning mr-1">Reset
                                                <i class="fa fa-refresh position-right"></i>
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-check-square-o"></i> Save
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- // Basic form layout section end -->
        </div>
    </div>
</div>
