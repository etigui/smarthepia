<script src="/js/scripts/extensions/toastr.js" type="text/javascript"></script>
<!-- END toastr -->

<script>


    userInfo();

    function userInfo(){
        $.ajax({
            url: "/manager/profile/load",
            type: "get",
            dataType: "json",
            success: function (response) {
                if(response.email && response.firstname && response.lastname){
                    $("#email").val(response.email);
                    $("#fname").val(response.firstname);
                    $("#lname").val(response.lastname);
                    $("#superLastname").text(response.lastname);
                }
            }
        });
    }

    $("#editUser").submit(function( event ) {
        event.preventDefault();
        emailUser = $("#email").val();
        firstnameUser = $("#fname").val();
        lastnameUser = $("#lname").val();

        if (emailUser && firstnameUser && lastnameUser) {
            $.ajax({
                url: "/manager/profile/edit/user",
                type: "post",
                data: {
                    email: emailUser,
                    firstname: firstnameUser,
                    lastname: lastnameUser
                },
                dataType: "json",
                success: function (response) {
                    userInfo();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }
    });

    $("#editPassword").submit(function( event ) {
        event.preventDefault();
        currentPass = $("#cpassword").val();
        newPass = $("#npassword").val();
        confirmNewPass = $("#cnpassword").val();
        if (currentPass && newPass && confirmNewPass) {
            $.ajax({
                url: "/manager/profile/edit/password",
                type: "post",
                data: {
                    cpass: currentPass,
                    npass: newPass,
                    cnpass: confirmNewPass
                },
                dataType: "json",
                success: function (response) {
                    userInfo();
                    $("#editPassword")[0].reset();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }
                }
            });
        }
    });


</script>
