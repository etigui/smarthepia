                $('#roomDevice').append('<option value="" selected disabled hidden>Select room</option>');
                $.each(response.data, function (i, item) {
                    if(item.type === "Floor"){

                        // Check if parent floor id match with building id
                        if($("#buildingDevice option:selected" ).val() === item.parent.toString()){
