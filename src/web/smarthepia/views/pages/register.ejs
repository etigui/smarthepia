<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-col="2-columns">
<% include ../partials/nav %>
<% include ../partials/menu %>
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-1">
                <h3 class="content-header-title">Register</h3>
                <span><%= dateTime %></span>
            </div>
        </div>
        <div class="content-body">
            <section id="basic-form-layouts">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-square-controls">Add location</h4>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form id="editUser" class="form">
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label for="donationinput2">Location
                                                    <span class="danger">*</span>
                                                </label>
                                                <select name="locationCreate" id="locationCreate" class="form-control square">
                                                    <option value="" selected disabled hidden>Select location</option>
                                                    <option value="Building">Building</option>
                                                    <option value="Floor">Floor</option>
                                                    <option value="Room">Room</option>
                                                </select>
                                            </div>
                                            <div id="buildingDiv" class="form-group">
                                                <label for="donationinput2">Building
                                                    <span class="danger">*</span>
                                                </label>
                                                <input type="text" id="buildingCreate" class="form-control square" placeholder="Building" name="" disabled>
                                            </div>
                                            <div id="floorDiv" class="form-group">
                                                <label for="donationinput2">Floor</label>
                                                <input type="text" id="floorCreate" class="form-control square" placeholder="Floor" name="" disabled>
                                            </div>
                                            <div id="roomDiv" class="form-group">
                                                <label for="donationinput2">Room</label>
                                                <input type="text" id="roomCreate" class="form-control square" placeholder="Room" name="" disabled>
                                            </div>
                                        </div>
                                        <div class="form-actions right">
                                            <button type="reset" class="btn btn-warning mr-1">
                                                <i class="fa fa-refresh position-right"></i> Reset
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-check-square-o"></i> Save
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title" id="basic-layout-square-controls">Personal informations</h4>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form id="editUser" class="form">
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label for="donationinput2">Email</label>
                                                <input type="email" id="email" class="form-control square" placeholder="email" name="email" required="">
                                            </div>
                                            <div class="form-group">
                                                <label for="donationinput2">First name</label>
                                                <input type="text" id="fname" class="form-control square" placeholder="First name" name="fname" required="">
                                            </div>
                                            <div class="form-group">
                                                <label for="donationinput2">Last name</label>
                                                <input type="text" id="lname" class="form-control square" placeholder="Last name" name="lname" required="">
                                            </div>
                                        </div>
                                        <div class="form-actions right">
                                            <button type="reset" class="btn btn-warning mr-1">
                                                <i class="fa fa-refresh position-right"></i> Reset
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-check-square-o"></i> Save
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<% include ../partials/footer %>

