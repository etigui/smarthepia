    function onLoad(){
        $('#buildingDiv').hide();
        $('#floorDiv').hide();
        $('#roomDiv').hide();
        $('#orientationDiv').hide();
        $('#ruleDiv').hide();

        // Fill in device load building select option
        $.ajax({
            url: "/manager/register/devices/location/list",
            type: "get",
            dataType: "json",
            success: function (response) {

                $.each(response.data, function (i, item) {

                    if(item.type === "Building"){
                        $('#buildingDevice').append($('<option>', {
                            value: item.id,
                            text : item.name
                        }));
                    }
                });
            }
        });

        // Fill in device load dependency select option
        $.ajax({
            url: "register/devices/dependency/list",
            type: "get",
            dataType: "json",
            success: function (response) {
                $.each(response.data, function (i, item) {
                    $('#dependencyDevice').append($('<option>', {
                        value: item.depname,
                        text : item.depname
                    }));
                });
            }
        });
    }


    /////////////////////////////////////////////////
    // Dependency
    /////////////////////////////////////////////////

    // Create new dependency device
    $("#createDependencySubmit").submit(function( event ) {
        event.preventDefault();

        // Check if all the IP are valid
        var validIp = true;
        $('.depdIp').each(function(i, obj) {
            if(!validateIP46($(this).val())){
                validIp = false;
            }
        });

        // If on or more IP are in error
        if (!validIp) {
            toastr.error("IP must be in IPv4 or IPv6 format", "error", {closeButton: true});
        } else {
            $.ajax({
                url: "/manager/register/create/dependency",
                type: "post",
                dataType: "json",
                data: $('#createDependencySubmit').serialize(),
                success: function (response) {
                    $("#createDependencySubmit").get(0).reset();
                    if (response.status === "success") {
                        toastr.success(response.message, response.status, {closeButton: true})
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true})
                    } else {
                        toastr.error("Undefined", "error", {closeButton: true})
                    }

                }
            });
        }
    });

