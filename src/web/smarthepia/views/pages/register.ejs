<script>
    $('#locationCreate').change(function(){
        if($(this).val() === "Building"){
            //$('#buildingCreate')[ ($("option[value='parcel']").is(":checked"))? "show" : "hide" ]();
            //$.blockUI({ message: 'OK' });
            $('#buildingDiv').show();
            $('#floorDiv').hide();
            $('#roomDiv').hide();

            var block_ele = $(this).closest('.card');
            $(block_ele).block({
                message: '<div class="ft-refresh-cw icon-spin font-medium-2"></div>',
                timeout: 2000, //unblock after 2 seconds
                overlayCSS: {
                    backgroundColor: '#fff',
                    opacity: 0.8,
                    cursor: 'wait'
                },
                css: {
                    border: 0,
                    padding: 0,
                    backgroundColor: 'transparent'
                }
            });




            // Spinner only
            //$('.block-spinner-only').on('click', function() {
                var block_ele = $(this).closest('.card');
                $(block_ele).block({
                    message: '<div class="ft-refresh-cw icon-spin font-medium-2"></div>',
                    timeout: 2000, //unblock after 2 seconds
                    overlayCSS: {
                        backgroundColor: '#fff',
                        opacity: 0.8,
                        cursor: 'wait'
                    },
                    css: {
                        border: 0,
                        padding: 0,
                        backgroundColor: 'transparent'
                    }
                });
            //});




            //$("#floorCreate").replaceWith('<input type="text" name="floorCreate" id="floorCreate" class="form-control square" placeholder="Building"  disabled>');
            //$("#roomCreate").replaceWith('<input type="text" name="roomCreate" id="roomCreate" class="form-control square" placeholder="Building"  disabled>');
        }else if($(this).val() === "Floor"){
            $('#buildingDiv').show();
            $('#floorDiv').show();
            $('#roomDiv').hide();


            //$("#floorCreate").replaceWith('<select id="floorCreate" name="floorCreate" class="form-control square"><option value="1">1</option></select>');

        }else if($(this).val() === "Room"){

            $('#buildingDiv').show();
            $('#floorDiv').show();
            $('#roomDiv').show();
            //$("#roomCreate").replaceWith('<input type="text" name="floorCreate" id="floorCreate" class="form-control square" placeholder="Building"  disabled>');
        }

        //alert($(this).val());
    })
</script>

