    option = null;

    // Get devices list (devices and location)
    $.get('/manager/list').done(function (data) {
        function getNestedChildren(arr, parent) {
            var out = []
            for(var i in arr) {
                if(arr[i].parent === parent) {
                    var children = getNestedChildren(arr, arr[i].id)
                    if(children.length) {
                        arr[i].children = children
                    }
                    out.push(arr[i])
                }
            }
            return out
        }

        myChart.setOption(option = {
            animation: false,
            title: {
                text: '',
                subtext: '',
                left: 'leafDepth'
            },
            //hoverable : true,
            calculable: true,
            tooltip : {
                trigger: 'item',
                formatter: function (info) {
                    return [
                        "Name: " + info.data.name + "</br>",
                        "Value: " + info.data.value + "</br>",
                        "Type: " + info.data.type+ "</br>",
                        "Color: " + info.data.itemStyle.color + "</br>",
                    ].join('');
                }
            },
            toolbox: {
                show : true,
                feature : {
                    mark : {show: true},
                    saveAsImage : {show: true, title : 'Save', type : 'png'
                    }
                }
            },
            grid: {
                borderWidth: 0,
            },
            series: [{
                name: 'hepia',
                type: 'treemap',
                roam: false,
                selectedMode: false,
                data: getNestedChildren(data.data, 0),
                breadcrumb: {show: true, textStyle: {fontSize: 100}},
                leafDepth: 1,
                levels: [
                    {itemStyle: {normal: {borderColor: '#FFF', borderWidth: 4, gapWidth: 4}}},
                    {itemStyle: {normal: {gapWidth: 4}}},
                ],
            }]
        })


        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
        myChart.hideLoading();
    });



