<script>

    onLoad();

    function onLoad(){
        getAutomation();
    }

    // Get automation rule
    function getAutomation(){
        $.ajax({
            url: "/automation/list",
            type: "get",
            dataType: "json",
            success: function (response) {

                // Get adn set start and end month
                // Get day by month and select the right day
                var startMonth = response.data[0].hpstartmonth;
                $("#hpStartMonth").val(startMonth);
                var endMonth = response.data[0].hpstopmonth;
                $("#hpEndMonth").val(endMonth);
                var startSel = $("#hpStartDay");
                var endSel = $("#hpEndDay");
                startSel.removeAttr('disabled');
                endSel.removeAttr('disabled');
                addDaysInSelect(startMonth, startSel);
                startSel.val(response.data[0].hpstartday);
                addDaysInSelect(endMonth, endSel);
                endSel.val(response.data[0].hpstopday);

                // Set other fields
                $("#oHpTempMin").val(response.data[0].nhptempmin);
                $("#oHpTempMax").val(response.data[0].nhptempmax);
                $("#HpTempMin").val(response.data[0].hptempmin);
                $("#HpTempMax").val(response.data[0].hptempmax);
                $("#minTempInside").val(response.data[0].intempmin);
                $("#minTempOutside").val(response.data[0].outtempmin);
                $("#maxTempSummer").val(response.data[0].outsummax);
                $("#automationId").val(response.data[0]._id);

                $("#pidProp").val(response.data[0].kp);
                $("#pidInt").val(response.data[0].ki);
                $("#pidDer").val(response.data[0].kd);

            }
        });
    }

    // On start month change
    $('#hpStartMonth').on('change', function() {
        var selectDay = $('#hpStartDay');
        addDaysInSelect(this.value, selectDay);

    });

    // On end month chnage
    $('#hpEndMonth').on('change', function() {
        var selectDay = $('#hpEndDay');
        addDaysInSelect(this.value, selectDay);
    });

    // Reload automation data
    $( "#reloadAutomation" ).click(function() {
        getAutomation();
    });

    // When submit form => update or create automation rule
    $( "#automationSubmit" ).submit(function( event ) {
        event.preventDefault();

        // Check input value
        if(!parsToFloat($("#pidProp").val())){
            toastr.error("PID Kp must be integer or flot", "error", {closeButton: true});
        }else if(!parsToFloat($("#pidInt").val())){
            toastr.error("PID Ki must be integer or flot", "error", {closeButton: true});
        }else if(!parsToFloat($("#pidDer").val())){
            toastr.error("PID Kd must be integer or flot", "error", {closeButton: true});
        }else if (!parsToInt($("#hpStartMonth").val())){
            toastr.error("You must chose a starting month", "error", {closeButton: true});
        }else if (!parsToInt($("#hpStartDay").val())){
            toastr.error("You must chose a starting day", "error", {closeButton: true});
        }else if (!parsToInt($("#hpEndMonth").val())){
            toastr.error("You must chose a Ending month", "error", {closeButton: true});
        }else if (!parsToInt($("#hpEndDay").val())){
            toastr.error("You must chose a Ending day", "error", {closeButton: true});
        }else{
            setAutomation($("#automationSubmit").serialize())
        }

        // Update or create automation rule
        function setAutomation(datas){
            $.ajax({
                url: "/automation/create",
                type: "post",
                dataType: "json",
                data: datas,
                success: function (response) {

                    if (response.status === "success") {
                        getAutomation();
                        toastr.success(response.message, response.status, {closeButton: true});
                    } else if (response.status === "error") {
                        toastr.error(response.message, response.status, {closeButton: true});
                    } else {
                        toastr.error("Undefined success response", "error", {closeButton: true});
                    }
                }
            });
        }
    });



    // BEGIN Server time section /////////////////////////////////////////////////////////////
    // Local and servers time
    var timeLocal = new Date();
    var timeServer = new Date("<%= dateTime %>");

    //C alculate the difference (returns milliseconds)
    var millDiff = timeLocal - timeServer;

    // Init the clock on loading of page
    window.onload = function () {
        //set the interval so clock ticks
        var timeClock = setInterval("timeTick()", 10);
    };
    // END Server time section /////////////////////////////////////////////////////////////

    <% if((typeof permission !== 'undefined') && permission > 0) {%>

    function loadBadge(){
        $.ajax({
            url: "/alarm/badge",
            type: "get",
            dataType: "json",
            success: function (response) {
                var span = $('#alarmBadge');
                updateBadge(span, response.atype, response.count);
            }
        });
    }

    // BEGIN alarm section ////////////////////////////////////////////////////////////////
    var socket = io.connect();
    socket.on('connect', function () {
        console.log('Socket connected');
    });

    socket.on('welcome',function(data){
        console.log("Receive welcome");
        loadBadge();
    });

    // Manager, admin receive notif when graph change
    socket.on('alarmNotify',function(data){
        console.log("Receive alarmNotify");
        loadBadge();
    });
    // END alarm section /////////////////////////////////////////////////////////////////
    <%}%>
</script>
